/**app.wxss**/
@import 'style/weui.wxss';

.theme-color {
  color: #827f2e;
}
.theme-bg {
  background-color: #827f2e;
}
.theme-bg-light {
  background-color: #a8a546;
}

.fl {
  float: left;
}
.fr {
  float: right;
}
.pd-20 {
  padding: 20rpx 10rpx;
}
.mb-10 {
  margin-bottom: 10rpx;
}
.mb-20 {
  margin-bottom: 20rpx;
}
.clearfix::after {
  content: '.';
  display: block;
  clear: both;
  height: 0;
  visibility: hidden;
}

/* flex 三列布局 start */
.flex-list-3 {
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
}
.flex-list-3 .item {
  width: calc((100% - 8px)/3);
  margin-bottom: 24rpx;
}
.flex-list-3 .item .i-pic {
  width: 100%;
  height: 264rpx;
}
.flex-list-3 .item .i-desc {
  white-space: nowrap;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden;
  padding: 0 8rpx;
  font-size: 24rpx;
}
/* flex 三列布局 end */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  color: #555;
  font-size: 28rpx;
} 
